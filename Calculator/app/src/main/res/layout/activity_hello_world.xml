<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HelloWorld"
    android:background="#8184b8">

    <EditText

        android:id="@+id/result_id"
        android:layout_width="fill_parent"
        android:textSize="50sp"
        android:layout_height="200dp"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/button"
        android:layout_above="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:onClick="btnMultClicked"
        android:textSize="25sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/button2"
        android:layout_above="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_alignStart="@+id/button4"
        android:onClick="btnMinClicked"
        android:textSize="25sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="btnDivClicked"
        android:textSize="25sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/button4"
        android:layout_above="@+id/button2"
        android:layout_alignParentEnd="true"
        android:onClick="btnPlusClicked"
        android:textSize="25sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button10"
        android:onClick="btn4Clicked"
        android:textSize="25sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/button6"
        android:layout_above="@+id/button"
        android:layout_toStartOf="@+id/button7"
        android:onClick="btn5Clicked"
        android:textSize="25sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/button7"
        android:layout_alignTop="@+id/button6"
        android:layout_toEndOf="@+id/button8"
        android:onClick="btn6Clicked"
        android:textSize="25sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/button8"
        android:layout_above="@+id/button2"
        android:layout_toStartOf="@+id/button16"
        android:onClick="btn8Clicked"
        android:textSize="25sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/button9"
        android:layout_alignTop="@+id/button4"
        android:layout_toEndOf="@+id/button6"
        android:onClick="btn9Clicked"
        android:textSize="25sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/button10"
        android:layout_alignTop="@+id/button8"
        android:layout_toStartOf="@+id/button6"
        android:onClick="btn7Clicked"
        android:textSize="25sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/button11"
        android:layout_alignBottom="@+id/button"
        android:layout_toStartOf="@+id/button6"
        android:onClick="btn1Clicked"
        android:textSize="25sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/button12"
        android:layout_alignTop="@+id/button3"
        android:layout_toStartOf="@+id/button6"
        android:onClick="btn0Clicked"
        android:textSize="25sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/button13"
        android:layout_below="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:layout_toStartOf="@+id/button14"
        android:onClick="btn2Clicked"
        android:textSize="25sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/button14"
        android:layout_below="@+id/button5"
        android:layout_alignEnd="@+id/button7"
        android:layout_toEndOf="@+id/button6"
        android:onClick="btn3Clicked"
        android:textSize="25sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:id="@+id/button15"
        android:layout_below="@+id/button11"
        android:layout_toStartOf="@+id/button16"
        android:onClick="btnDotClicked"
        android:textSize="25sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/button16"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/button3"
        android:onClick="btnEqualClicked"
        android:textSize="25sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CE"
        android:id="@+id/button17"
        android:layout_above="@+id/button8"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="btnCEClicked"
        android:textSize="25sp"/>

</RelativeLayout>
